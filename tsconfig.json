// tsconfig.json
{
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "react",
    // … your existing options …
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,      // ← allow `import foo from './data.json'`
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]             // adjust to your folder structure
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.json"                    // ← make sure JSON files are included
  ]
}
